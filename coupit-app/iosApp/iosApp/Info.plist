<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Camera permissions -->
    <key>NSCameraUsageDescription</key>
    <string>This app requires access to the camera to scan QR codes.</string>

    <!-- Photo library permissions -->
    <key>NSPhotoLibraryUsageDescription</key>
    <string>This app requires access to your photo library to scan QR codes from images.</string>

    <!-- Disable minimum frame duration on phone -->
    <key>CADisableMinimumFrameDurationOnPhone</key>
    <true/>

    <!-- Enable background modes for remote notifications -->
    <key>UIBackgroundModes</key>
    <array>
        <string>remote-notification</string>
    </array>

    <!-- URL scheme for the app -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>coupit</string>
            </array>
            <key>CFBundleURLName</key>
            <string>com.webxela.app.coupit</string>
        </dict>
    </array>

    <!-- Disable Firebase App Delegate Proxy -->
    <key>FirebaseAppDelegateProxyEnabled</key>
    <false/>
</dict>
</plist>
